{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "baseUrl": "."
  }
}
